<?xml version="1.0" encoding="utf-8"?>
<com.zhxh.xtouchsystem.touch.CFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cFrameLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="50dp"
    android:background="#3ff">

    <com.zhxh.xtouchsystem.touch.CLinearLayout
        android:id="@+id/cLinearLayout"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="#00f"
        android:gravity="center"
        android:orientation="vertical">

        <com.zhxh.xtouchsystem.touch.CTextView
            android:id="@+id/cTextView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#f00"
            android:clickable="true"
            android:focusable="true" />

        <com.zhxh.xtouchsystem.touch.CButton
            android:id="@+id/cButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="@string/cButton"
            android:textAllCaps="false" />

    </com.zhxh.xtouchsystem.touch.CLinearLayout>

</com.zhxh.xtouchsystem.touch.CFrameLayout>